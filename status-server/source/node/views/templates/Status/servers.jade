extends ../layout

block script
    script(src='/js/status/servers.js')


block content
    header
        .navbar.navbar-static-top
            .container
                a.navbar-brand(href='/')
                    span FLYDEV
                    sup v0.1
                .nav-collapse.collapse
                    ul.nav.navbar-nav.pull-right
                        li: a(href='#/login') Контрольно-пропускной пункт


    .container
        .row
            .col-12
                hr
                h1 FLYDEV JET ENGINE
                hr

        .row
            .col-12.well
                div(ng-init= 'status= #{status}', ng-controller='CtrlServers')
                    .row(ng-repeat='server in status',style='padding-bottom:10px')
                        .col-4= '{{ server.title }}'
                        .col-4= '{{ server.host }}:{{ server.port }}'
                        .col-2= '{{ server.stat.numplayers }}/{{ server.stat.maxplayers }}'
                        .col-2
                            button.btn.btn-danger= 'Remove'

                div
                    .row
                        form(ng-submit='addServer()')
                            .col-4
                                input.col-8(type='text')
                            .col-4
                                input.col-6(type='text')
                                span.col-1=':'
                                input.col-3(type='text')
                            .col-2
                            .col-2
                                button.btn.btn-primary= 'Add'




    footer
        .navbar.navbar-fixed-bottom
            .container
                .by
                    a(href='//awesome39.com') При поддержке 
                        abbr AWESOME{39}
